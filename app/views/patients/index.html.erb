<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<%= form_tag patients_path, :method => 'get' do %> <!-- Passes patient index, method is get -->
  <%= text_field_tag :search, params[:search] %> <!-- passes value search for parameter -->
  <%= submit_tag "Search By Last Name" %>
<% end %>

<%= link_to "Advanced Search", new_search_path %>

<table class="table, col-sm-12" >
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th>Injury</th>
      <th>Infection</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phonenumber %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.infection %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
